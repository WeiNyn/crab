[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "My new Python project"
authors = [ { name = "{{ author }}" } ]
dependencies = []
requires-python = ">=3.8"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.ruff]
line-length = 88
select = ["E", "F", "I"]

[tool.mypy]
strict = true